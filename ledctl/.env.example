# LB3C Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-generate-with-python-secrets
FLASK_ENV=development
FLASK_DEBUG=False

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# Security Settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ledctl.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_EXTENSIONS=gif,png,jpg,jpeg,mp4,avi,mov

# Hardware Configuration
HARDWARE_MOCK_MODE=False
GPIO_WARNINGS=False

# API Security
API_AUTH_ENABLED=False
API_KEYS=your-api-key-1,your-api-key-2  # Comma-separated list
CORS_ORIGINS=*  # Comma-separated list of allowed origins
REDIS_URL=redis://localhost:6379  # For rate limiting (optional)

# Rate Limiting
RATE_LIMIT_DEFAULT=200 per hour
RATE_LIMIT_UPLOAD=10 per hour
RATE_LIMIT_DEVICE_SWITCH=30 per hour

# Authentication (for future use)
AUTH_ENABLED=False
AUTH_SESSION_TIMEOUT=3600  # 1 hour